<div class="container py-5">
      <div class="card">
        <!-- Card header-->
        <div class="card-header p-4">
          <h2>{{platform.header.add.title}}</h2>
          <p class="text-muted">{{platform.header.add.message}}</p>
          <p class="mb-0">
            <a href="/admin/laboratorios" class="btn btn-outline-primary btn-sm">
              <i class="fa-solid fa-arrow-left"></i> {{buttons.all}}
            </a>
          </p>
        </div>
        <!-- End of card header-->

        <!-- Card body content -->
        <div class="card-body">
          {{#if success}}
            <div class="alert alert-success alert-dismissible fade show">
              <i class="fa-solid fa-check"></i>
              {{success}}
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          {{/if}}
          {{#if failed }}
            <div class="alert alert-danger alert-dismissible fade show">
              <i class="fa-solid fa-triangle-exclamation mr-2"></i>
              {{failed}}
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          {{/if}}
          <form action="/admin/laboratorios/add" method="POST">
            <div class="form-group my-4">
              <label for="name" class="form-label mb-1">
                <strong>Datos de la unidad de adscripción</strong>
              </label>
              <div class="row">
                <div class="col-sm-12 col-md-4">
                  <input type="text" class="form-control" name="name" placeholder="Unidad de adscripción">
                </div>
                <div class="col-sm-12 col-md-4">
                  <input type="text" class="form-control" name="area" placeholder="Nombre de la unidad de adscripción">
                </div>
                <div class="col-sm-12 col-md-4">
                  <input type="text" class="form-control" name="usbid" placeholder="USBID">
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-sm-12 col-md-6">
                  <label for="lab_head" class="form-label"><strong>Jefe de laboratorio actual</strong></label>
                  <input type="text" class="form-control" name="lab_head" placeholder="Jefe de laboratorio actual">
                </div>
                <div class="col-sm-12 col-md-6">
                  <label for="email" class="form-label"><strong>Correo electrónico</strong></label>
                  <input type="text" class="form-control" name="email" placeholder="Correo electrónico">
                </div>                
              </div>              
            </div>
            <div class="form-group my-4">
              <label for="description" class="form-label mb-1"><strong>Descripción</strong></label>
              <textarea class="form-control" name="description" placeholder="Descripción" rows="6"></textarea>
            </div>
            <div class="form-group my-4">
              <label class="form-label mb-1">
                <strong>Ubicación</strong>
              </label>
              <input type="text" class="form-control" name="location_main_office" placeholder="Ubicación">
            </div>
            <div class="form-group my-4">
              <label class="form-label mb-1">
                <strong>Número telefónico pricipal</strong>
                <br>
                <i class="text-muted">
                  <small>
                    <u>Ingrese siguiendo este formato</u>: +58212XXXXXXX para el número, XXXX para la extensión
                    <br>
                    <u>Ejemplo</u>: +582129066700
                  </small>
                </i>
              </label>
              <div class="row">
                <div class="col">
                  <input type="text" class="form-control" name="phone_main_office" placeholder="Número telefónico">
                </div>
                <div class="col">
                  <input type="text" class="form-control" name="extension_main_office" placeholder="Extensión">
                </div>
              </div>
            </div>
            <div class="form-group mt-5 mb-0">
              <button class="btn btn-primary">
                Guardar datos
              </button>
              <a href="/admin/laboratorios" class="btn btn-secondary">
                Cancelar
              </a>
            </div>
          </form>
        </div>
        <!-- End of card body content -->
      </div>
</div>