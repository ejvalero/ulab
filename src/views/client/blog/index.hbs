<div class="container">

  <!-- Main title and breadcrumbs -->
  {{> client_header title='Noticias' breadcrumbs = breadcrumbs}}


  <div class="row">
    <!-- Content -->
    <div class="col-sm-12 col-md-7 col-lg-8 py-3">
      <div class="row h-100">
        <div class="col-12 mb-4">
          <div class="card mb-4 bg-body rounded-4 content-box post-grid-card">
            <img class="card-img-top post-img" src="{{first.img}}" alt="{{first.title}}">
            <div class="card-body">
              <h6 class="card-title fw-bold">{{first.title}}</h6>
              <small class="text-muted">
                <i class="fa-solid fa-calendar"></i>
                {{first.published_at}}
              </small>
              <p class="card-text lh-sm my-3">{{first.excerpt}}</p>
              <p class="mb-0">
                <a href="/noticias/{{first.slug}}" class="btn btn-primary btn-sm rounded-4 px-3">
                  Leer
                  <small><i class="fa-solid fa-chevron-right"></i></small>  
                </a>
              </p>
            </div>
          </div>
        </div>
        {{#each posts}}
          <div class="col-md-12 col-lg-6 py-3">
            <div class="card h-100 bg-body rounded-4 content-box post-grid-card">
              <img class="card-img-top thumbnail-post-img" src="{{img}}" alt="{{title}}">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h6 class="card-title fw-bold">{{title}}</h6>
                  <small class="text-muted">
                    <i class="fa-solid fa-calendar"></i>
                    {{published_at}}
                  </small>
                </div>
                <p class="card-text lh-sm my-3">{{excerpt}}</p>
                <p class="mb-0">
                  <a href="/noticias/{{slug}}" class="btn btn-primary btn-sm rounded-4 px-3">
                    Leer
                    <small><i class="fa-solid fa-chevron-right"></i></small>  
                  </a>
                </p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
    <!-- End of content  -->


    <!-- Sidebar -->
    <div class="col-sm-12 col-md-5 col-lg-4 py-3">
      <div class="bg-body rounded-4 content-box">
        <h5 class="px-4 pt-4 pb-3 fw-bold">Noticias recientes</h5>
        <ul class="nav nav-item flex-column pb-3 sidebar-item">
          {{#each posts}}
          <li class="nav-item mx-3 sidebar-item sidebar-post">
            <a 
              href="/noticias{{#if slug}}/{{slug}}{{/if}}"
              class="nav-link d-flex lh-sm p-3"
              aria-current="page"
            >
              <img class="thumbnail-post-sidebar-img" src="{{img}}" alt="{{title}}">
              <div class="d-flex flex-column justify-content-between">
                <span>{{title}}</span>
                <small class="text-muted">
                  <i class="fa-solid fa-calendar"></i>
                  {{published_at}}
                </small>
              </div>
            </a>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
    <!-- End of sidebar -->

  </div>

</div>