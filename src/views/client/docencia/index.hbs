<div class="container">
  
  <!-- Main title and breadcrumbs -->
  <div class="mt-5 mb-4">
    <h1 class="my-0 page-main-title fw-bold">{{content.main.name}}</h1>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Página principal</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{content.main.name}}</li>
      </ol>
    </nav>
  </div>
  <!-- End of main title and breadcrumbs -->

  <div class="row">

    <!-- Sidebar -->
    <div class="col-sm-12 col-md-5 col-lg-3 p-3">
      <div class="bg-body rounded-4 content-box">
        <ul class="nav nav-item flex-column mb-auto sidebar-item p-2">
          <li class="nav-item m-1">
            <a
              href="/" 
              class="nav-link active d-flex justify-content-between align-items-center"
              aria-current="page">
              <span>{{content.main.name}}</span><i class="fa-solid fa-circle-chevron-right"></i>
            </a>
          </li>
          {{#each content.components}}
          <li class="nav-item m-1 sidebar-item">
            <a 
              href="/docencia-e-investigacion/{{usbid}}"
              class="nav-link d-flex justify-content-between align-items-center"
              aria-current="page"
            >          
              <span>{{name}}</span><i class="fa-solid fa-circle-chevron-right"></i>
            </a>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
    <!-- End of sidebar -->

    <!-- Main content -->
    <div class="col-sm-12 col-md-7 col-lg-9 p-3">
      <div class="p-4 bg-body rounded-4 content-box h-100">
        <h3>{{content.main.name}}</h3>
        <p class="text-muted">{{content.main.subcategory}}</p>
        <hr>
        <div class="my-4">
          {{#if content.main.mision}}
            <h5>Misión</h5>
            {{content.main.mision}}
          {{/if}}
        </div>
        <div class="my-4">
          {{#if content.main.objectives}}
            <h5>Objetivos</h5>
            {{{content.main.objectives}}}
          {{/if}}
        </div>
        <div class="my-4">
          {{#if content.main.personal}}
            <h5>Personal</h5>
            {{content.main.personal}}
          {{/if}}
        </div>
        <div class="my-4">
          <h5>Organización</h5>
          {{{content.main.structure}}}
        </div>
      </div>
    </div>
    <!-- Main content -->

  </div>
</div>